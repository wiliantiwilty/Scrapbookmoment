<body>
  <div class="loader">
    <div class="emoji">üê±</div>
    <div class="loading-text">Membuka scrapbook kenangan...</div>
    <div class="progress w-75 mx-auto">
      <div id="progressBar" 
           class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
           role="progressbar" style="width: 0%">0%</div>
    </div>
  </div>

  <script>
    let progress = 0;
    const progressBar = document.getElementById("progressBar");
    const duration = 15000; // 15 detik
    const interval = 150;   // update setiap 150ms
    const step = 100 / (duration / interval);

    const timer = setInterval(() => {
      progress += step;
      if (progress >= 100) {
        progress = 100;
        clearInterval(timer);
        // setelah selesai, redirect ke home.html
        window.location.href = "home.html";
      }
      progressBar.style.width = progress + "%";
      progressBar.innerText = Math.floor(progress) + "%";
    }, interval);
  </script>
</body>
</html>


